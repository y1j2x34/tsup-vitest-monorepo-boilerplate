{
    "extends": "./tsconfig.options.json",
    "compilerOptions": {
        "composite": true,
        "lib": [
            "ESNext"
        ],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        // Include test-specific types.
        "types": [
            "vitest/globals",
            "node"
        ]
    },
    "include": [
        "packages/**/__tests__/**/*.ts",
        "packages/**/__tests__/**/*.spec.ts",
        "packages/**/src/**/*.ts"
    ]
}