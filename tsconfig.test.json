{
    "extends": "./tsconfig.options.json",
    "compilerOptions": {
        "composite": true,
        "lib": ["ESNext", "DOM", "WebWorker"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        // Include test-specific types.
        "types": ["vitest/globals", "node"]
    },
    "include": ["packages/*/src/**/*.ts", "packages/**/__tests__/**/*.ts"]
}
